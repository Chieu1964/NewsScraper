

<div class="container articles-div">
    {{#each articles}}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>
                <a href="{{this.link}}" target="_blank" class="article-link">{{this.title}}</a>
            </h3>
            <button type="button" class="btn btn-default view-note-btn" data-id="{{this._id}}" data-toggle="modal" data-target="#viewNoteModal">View Note</button>
            <button type="button" class="btn btn-default unsave-btn" data-id="{{this._id}}" data-toggle="modal" data-target="#unsaveModal">Remove</button>
        </div>
       
    </div>
    {{/each}}
</div>

<!-- Scrape Modal -->
<div class="modal fade" id="scrapeModal" tabindex="-1" role="dialog" aria-labelledby="scrapeModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="scrapeModalLabel">Articles successfully scraped!</h4>
            </div>
        </div>
    </div>
</div>

<!-- View Note Modal -->
<div class="modal fade" id="viewNoteModal" tabindex="-1" role="dialog" aria-labelledby="noteModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div id="update-note-div">
                <div class="modal-body">
                    <form id="add-note-form">
                        <div class="form-group">
                            <label for="note-title">Title:</label>
                            <input id="note-title" class="form-control" type="text" />
                        </div>
                        <div class="form-group">
                            <label for="note-body">Note:</label>
                            <textarea id="note-body" class="form-control" rows="10"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary update-note-btn">Update Note</button>
                </div>
            </div>

            <div id="note-updated-div">
                <h4 class="modal-title">Note updated!</h4>
            </div>

        </div>
    </div>
</div>

<!-- Unsave Modal -->
<div class="modal fade" id="unsaveModal" tabindex="-1" role="dialog" aria-labelledby="unsaveModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div id="confirm-unsave-div">
                    <h4 class="modal-title">Are you sure you want to remove this article?</h4>
                    <button type="button" class="btn btn-primary unsave-yes-btn">Yes</button>
                    <button type="button" class="btn btn-primary unsave-no-btn" data-dismiss="modal">No</button>
                </div>
                <div id="unsave-success-div">
                    <h4 class="modal-title">Article successfully removed.</h4>
                </div>
            </div>
        </div>
    </div>
</div>
